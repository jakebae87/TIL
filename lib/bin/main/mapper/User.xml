<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spring.mapperInterface.UserMapper">

	<!-- NOTICE LIST -->
	<select id="getList" resultType="Map">
		SELECT *
		FROM POST
	</select>

	<insert id="saveOne" parameterType="Map">
		INSERT
		INTO POST
		(id, user_nm, pwd)
		VALUES (#{id}, #{user_nm}, #{pwd})
	</insert>

	<delete id="deleteOne" parameterType="String">
		DELETE
		FROM POST
		WHERE id = #{id}
	</delete>
	
	<update id="editOne" parameterType="Map">
		UPDATE POST
		SET user_nm = #{user_nm}, pwd = #{pwd}
		WHERE id = #{id}
	</update>
</mapper>